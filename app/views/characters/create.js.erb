$(".new_character").html('');
<% if @character.id %>
$(".list").html("<%= escape_javascript(render partial: 'list', locals: {:characters => Character.all } )%>");
$(".edit").html("<%= escape_javascript(render partial: 'edit', locals: { :character => @character, :tag => Tag.new, :edit => nil }) %>");
