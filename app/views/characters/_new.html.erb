<div class="new_character_box">
    New Character
    <%= form_for(character, remote: true) do |f| %>
    	<%= f.text_field(:name, placeholder: "Name", id:"new_character_name") %><br>
    	<%= f.text_area(:bio, placeholder: "Bio", id:"new_character_bio") %><br>
    	<%= f.submit("Create Character") %>
    <% end %>
    <div id="how-to-cancel"> Click outside to cancel</div>
</div>
