
<div class="new_character_box">
    New Character
    <%= form_for(character, remote: true) do |f| %>
    	<%= f.text_field(:name, placeholder: "Name", id:"new_character_name") %><br>
    	<%= f.text_area(:bio, placeholder: "Bio", id:"new_character_bio") %><br>
        <span id="shuffle-button" onclick="assignRandomByShuffle(true);"> Assign Shuffled Fixed Distribution </span> |
        <span id="random-button" onclick="assignRandomByDice(true);"> Assign Random Distribution </span>
        <div id="new_ability_labels_container">
        <%= f.label(:health) %> |
        <%= f.label(:strength) %> |
        <%= f.label(:dexterity) %> |
        <%= f.label(:constitution) %> |
        <%= f.label(:intelligence) %> |
        <%= f.label(:wisdom) %> |
        <%= f.label(:charisma) %><br>
        </div>
        <div id="new_abilities_container">
        <div class="row_labels">Base:</div>
        <%= f.number_field(:health, step: 1, value: 0, class:"new_abilities_field", id:"new_health")%>
        <%= f.number_field(:strength, step: 1, value: 0, class:"new_abilities_field", id:"new_strength") %>
        <%= f.number_field(:dexterity, step: 1, value: 0, class:"new_abilities_field", id:"new_dexterity") %>
        <%= f.number_field(:constitution, step: 1, value: 0, class:"new_abilities_field", id:"new_constitution") %>
        <%= f.number_field(:intelligence, step: 1, value: 0, class:"new_abilities_field", id:"new_intelligence") %>
        <%= f.number_field(:wisdom, step: 1, value: 0, class:"new_abilities_field", id:"new_wisdom") %>
        <%= f.number_field(:charisma, step: 1, value: 0, class:"new_abilities_field", id:"new_charisma") %><br>
        <span id="new_sigmas">
        <div class="row_labels">Ïƒ:</div> 
        <%= f.number_field(:health_sigma, step: 1, value: 0, class:"new_abilities_field") %>
        <%= f.number_field(:strength_sigma, step: 1, value: 0, class:"new_abilities_field") %>
        <%= f.number_field(:dexterity_sigma, step: 1, value: 0, class:"new_abilities_field") %>
        <%= f.number_field(:constitution_sigma, step: 1, value: 0, class:"new_abilities_field") %>
        <%= f.number_field(:intelligence_sigma, step: 1, value: 0, class:"new_abilities_field") %>
        <%= f.number_field(:wisdom_sigma, step: 1, value: 0, class:"new_abilities_field") %>
        <%= f.number_field(:charisma_sigma, step: 1, value: 0, class:"new_abilities_field") %><br>
        </span>
        </div>
        <%= f.label "Unique?" %>
        <%= f.check_box :unique, onclick:"toggleElements('#new_sigmas');" %> <br>
    	<%= f.submit("Create Character", id:"create_character_button") %>
    <% end %>
    <div id="how-to-cancel"> Click outside to cancel</div>
</div>
