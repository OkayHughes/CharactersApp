<% @tag ||= Tag.new %>

<div class="main">
    <div class="list">
        <% if @characters.count != 0 %>
            <%= render(partial: "list", locals: {:characters => @characters}) %>
        <% else %>
        <ul> <li class="null-text"> No Characters </li> </ul>
        <% end %>
    </div>
    <div class="edit">
        <% if @character.id %>
        <%= render(partial: "edit", locals: {:character => @character, :tag => @tag}) %>
        <% end %>
    </div>
</div>
