<!DOCTYPE html>
<html>
<head>
  <title>CharacterApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
<div class="topbar">
	<%= link_to(new_character_path, remote: true) do %>
    <div class="plus">+</div>
    <% end %>
    <div class="new_character">
    </div>
</div>
<%= yield %>
</div>

</body>
</html>
